{
  "name": "language-model-polyfill",
  "version": "0.0.1",
  "description": "A Polyfill for the Prompt API (window.LanguageModel) based on Transformers.js",
  "main": "dist/language-model-polyfill.cjs.js",
  "module": "dist/language-model-polyfill.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/language-model-polyfill.cjs.js",
      "import": "./dist/language-model-polyfill.es.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && node build.mjs && tsc -p tsconfig.build.json",
    "deploy": "node scripts/updateVersion.mjs patch && npm run build && npm publish"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.7.1"
  },
  "devDependencies": {
    "@types/dom-chromium-ai": "^0.0.9",
    "@webgpu/types": "^0.1.64",
    "esbuild": "^0.25.8",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "terser": "^5.43.1",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/nico-martin/language-model-polyfill.git"
  },
  "author": "Nico Martin <mail@nico.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nico-martin/language-model-polyfill/issues"
  },
  "homepage": "https://github.com/nico-martin/language-model-polyfill#readme"
}
